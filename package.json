{
  "name": "rxjs-study",
  "version": "0.0.1",
  "description": "Let's learn to use rxjs deeply, just do it!",
  "repository": "git@github.com:JounQin/rxjs-study.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "webpack-dev-server --hot",
    "build": "rm -rf dist && NODE_ENV=production webpack",
    "lint": "tslint -p . -t stylish",
    "sync": "bash sync.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.tsx?": [
      "tslint -p . -t stylish --fix",
      "git add"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": null
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "antd": "^3.6.1",
    "lodash-es": "^4.17.10",
    "qs": "^6.5.2",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "rxjs": "^6.2.0"
  },
  "devDependencies": {
    "@types/fork-ts-checker-webpack-plugin": "^0.4.0",
    "@types/html-webpack-plugin": "^2.30.3",
    "@types/lodash": "^4.14.109",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "10.1.4",
    "@types/qs": "^6.5.1",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/react-modal": "^3.1.2",
    "@types/webpack": "^4.4.0",
    "@types/webpack-env": "^1.13.6",
    "autoprefixer": "^8.6.0",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.1.3",
    "lodash": "^4.17.10",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.5",
    "prettier": "^1.13.4",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "style-resources-loader": "^1.1.0",
    "ts-import-plugin": "^1.5.2",
    "ts-loader": "^4.3.1",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.3",
    "webpack-dev-server": "^3.1.4"
  }
}
